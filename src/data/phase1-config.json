{
  "schema_version": "1.0",
  "title": "Incident Knowledge Recorder",
  "description": "Comprehensive incident assessment questionnaire for cyber security incidents",
  "pages": [
    {
      "id": "incident_basics",
      "title": "Incident Basics",
      "description": "Basic information about the incident and its classification.",
      "explanation": "Please provide the fundamental details about this incident for proper categorization and tracking.",
      "questions": [
        {
          "id": "incident_reference",
          "type": "text_short",
          "question": "Incident reference or ticket number",
          "explanation": "Provide the unique identifier or ticket number assigned to this incident by your organization.",
          "required": true,
          "placeholder": "e.g., INC-2025-0001"
        },
        {
          "id": "incident_title",
          "type": "text_short",
          "question": "Incident title or brief description",
          "explanation": "Provide a short, descriptive title for this incident.",
          "required": true,
          "placeholder": "e.g., Ransomware attack on file servers"
        },
        {
          "id": "incident_severity",
          "type": "single_select",
          "question": "What is the severity level of this incident?",
          "explanation": "Select the severity classification based on business impact.",
          "required": true,
          "options": [
            {
              "value": "critical",
              "label": "Critical - Severe business impact, immediate action required"
            },
            {
              "value": "high",
              "label": "High - Significant impact, urgent attention needed"
            },
            {
              "value": "medium",
              "label": "Medium - Moderate impact, timely response required"
            },
            {
              "value": "low",
              "label": "Low - Minor impact, standard response procedures"
            },
            {
              "value": "informational",
              "label": "Informational - No immediate impact, monitoring required"
            }
          ]
        },
        {
          "id": "incident_status",
          "type": "single_select",
          "question": "What is the current status of this incident?",
          "explanation": "Select the current phase of incident response.",
          "required": true,
          "options": [
            {
              "value": "detected",
              "label": "Detected - Incident identified but not yet analyzed"
            },
            {
              "value": "investigating",
              "label": "Investigating - Active investigation in progress"
            },
            {
              "value": "containing",
              "label": "Containing - Taking action to limit spread/impact"
            },
            {
              "value": "eradicating",
              "label": "Eradicating - Removing threat from environment"
            },
            {
              "value": "recovering",
              "label": "Recovering - Restoring systems to normal operation"
            },
            {
              "value": "closed",
              "label": "Closed - Incident fully resolved"
            },
            {
              "value": "monitoring",
              "label": "Monitoring - Post-incident monitoring phase"
            }
          ]
        },
        {
          "id": "related_incidents",
          "type": "text_short",
          "question": "Related incident references (if any)",
          "explanation": "If this incident is related to or part of other incidents, provide their reference numbers.",
          "required": false,
          "placeholder": "e.g., INC-2025-0002, INC-2024-0123"
        }
      ]
    },
