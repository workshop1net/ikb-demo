    {
      "id": "third_party_assistance",
      "title": "External Assistance",
      "description": "Information about external parties engaged to assist with incident response.",
      "explanation": "Understanding what external resources were utilized helps assess response capabilities and resource allocation.",
      "questions": [
        {
          "id": "used_third_party",
          "type": "single_select",
          "question": "Did your organization engage external assistance to respond to this incident?",
          "explanation": "Indicate whether any third-party support was brought in to help with incident response.",
          "required": true,
          "options": [
            {
              "value": "yes",
              "label": "Yes, external assistance was engaged"
            },
            {
              "value": "no",
              "label": "No, handled internally only"
            },
            {
              "value": "unknown",
              "label": "Unknown"
            }
          ]
        },
        {
          "id": "third_party_type",
          "type": "multi_select",
          "question": "What types of external assistance were engaged?",
          "explanation": "Select all types of third-party assistance that were utilized during incident response.",
          "required": true,
          "options": [
            {
              "value": "ir_company",
              "label": "Incident Response / Forensics Firm"
            },
            {
              "value": "external_legal",
              "label": "External Legal Counsel"
            },
            {
              "value": "insurance",
              "label": "Cyber Insurance Provider/Broker"
            },
            {
              "value": "it_provider",
              "label": "Managed IT Service Provider"
            },
            {
              "value": "security_vendor",
              "label": "Security Vendor/VAR"
            },
            {
              "value": "pr_comms",
              "label": "Public Relations / Communications"
            },
            {
              "value": "other",
              "label": "Other (please specify)"
            }
          ],
          "show_when": {
            "question_id": "used_third_party",
            "condition": "equals",
            "value": "yes"
          }
        },
        {
          "id": "third_party_other_details",
          "type": "text_short",
          "question": "Please specify the other type of external assistance:",
          "explanation": "Provide details about the type of assistance not listed above.",
          "required": true,
          "show_when": {
            "question_id": "third_party_type",
            "condition": "contains",
            "value": "other"
          }
        },
        {
          "id": "ir_company_name",
          "type": "text_short",
          "question": "Name of the Incident Response / Forensics firm(s) engaged:",
          "explanation": "Provide the name(s) of the IR/forensics companies that assisted with the response.",
          "required": false,
          "show_when": {
            "question_id": "third_party_type",
            "condition": "contains",
            "value": "ir_company"
          }
        }
      ]
    },
    {
      "id": "incident_discovery",
      "title": "Incident Discovery and Reporting",
      "description": "How the incident was discovered and which authorities were notified.",
      "explanation": "Understanding discovery and reporting methods helps assess detection capabilities and regulatory compliance.",
      "questions": [
        {
          "id": "detection_method",
          "type": "single_select",
          "question": "How was the incident first detected?",
          "explanation": "Select the method by which your organization first became aware of the incident.",
          "required": true,
          "options": [
            {
              "value": "external_notification",
              "label": "External notification (law enforcement, government agency, etc.)"
            },
            {
              "value": "internal_monitoring",
              "label": "Internal monitoring/security tools"
            },
            {
              "value": "customer_supplier",
              "label": "Reported by customer/supplier/partner"
            },
            {
              "value": "news_media",
              "label": "News or media report"
            },
            {
              "value": "unknown",
              "label": "Unknown (please explain)"
            },
            {
              "value": "other",
              "label": "Other (please specify)"
            }
          ]
        },
        {
          "id": "detection_unknown_explain",
          "type": "text_short",
          "question": "Please explain the unknown detection method:",
          "explanation": "Provide details about why the detection method is unknown.",
          "required": true,
          "show_when": {
            "question_id": "detection_method",
            "condition": "equals",
            "value": "unknown"
          }
        },
        {
          "id": "detection_other_specify",
          "type": "text_short",
          "question": "Please specify the other detection method:",
          "explanation": "Provide details about the detection method not listed above.",
          "required": true,
          "show_when": {
            "question_id": "detection_method",
            "condition": "equals",
            "value": "other"
          }
        },
        {
          "id": "incident_reported_to",
          "type": "multi_select",
          "question": "Was this incident reported to any external authorities or organizations?",
          "explanation": "Select all external parties that were notified about this incident.",
          "required": false,
          "options": [
            {
              "value": "law_enforcement",
              "label": "Law Enforcement"
            },
            {
              "value": "ncsc",
              "label": "NCSC (or national cybersecurity authority)"
            },
            {
              "value": "data_protection",
              "label": "Data Protection Authority/Regulator"
            },
            {
              "value": "sector_regulator",
              "label": "Sector-specific Regulator"
            },
            {
              "value": "isac",
              "label": "Information Sharing and Analysis Center (ISAC)"
            },
            {
              "value": "insurance",
              "label": "Cyber Insurance Provider"
            },
            {
              "value": "none",
              "label": "None - incident not reported externally"
            },
            {
              "value": "other",
              "label": "Other (please specify)"
            }
          ]
        },
        {
          "id": "incident_reported_to_other",
          "type": "text_short",
          "question": "Please specify other organizations this incident was reported to:",
          "explanation": "Provide details about other organizations that were notified about this incident.",
          "required": true,
          "show_when": {
            "question_id": "incident_reported_to",
            "condition": "contains",
            "value": "other"
          }
        }
      ]
    },
    {
      "id": "timeline",
      "title": "Timeline",
      "description": "Key dates and times in the incident lifecycle.",
      "explanation": "Accurate timeline information is crucial for understanding the incident progression and response effectiveness.",
      "questions": [
        {
          "id": "first_malicious_activity",
          "type": "datetime_range",
          "question": "When was the first malicious activity?",
          "explanation": "Provide the timeframe of earliest known malicious activity. Use appropriate precision - if you only know it was sometime in a particular month, use month precision.",
          "required": true,
          "default_precision": "day",
          "special_options": [
            "unknown",
            "na"
          ]
        },
        {
          "id": "incident_detected",
          "type": "datetime_range",
          "question": "When was the incident first detected?",
          "explanation": "Provide the timeframe when your organization became aware of the incident. If exact time unknown, use appropriate precision level.",
          "required": true,
          "default_precision": "day",
          "special_options": [
            "unknown",
            "na"
          ]
        },
        {
          "id": "incident_contained",
          "type": "datetime_range",
          "question": "When was the incident contained?",
          "explanation": "Provide the specific date when the incident was successfully contained.",
          "required": false,
          "default_precision": "hour",
          "special_options": [
            "unknown",
            "na"
          ]
        },
        {
          "id": "systems_recovered",
          "type": "datetime_range",
          "question": "When were systems recovered?",
          "explanation": "Provide the date when your organization restored normal operations.",
          "required": false,
          "default_precision": "hour",
          "special_options": [
            "unknown",
            "na"
          ]
        },
        {
          "id": "incident_closed",
          "type": "datetime_range",
          "question": "When was the incident response completed?",
          "explanation": "Provide the timeframe when the incident investigation and response activities were concluded.",
          "required": false,
          "default_precision": "hour",
          "special_options": [
            "unknown",
            "na"
          ]
        }
      ]
    },
    {
      "id": "stage_of_attack",
      "title": "Stage of Attack",
      "description": "Assessment of which stage of attack this incident represents.",
      "explanation": "Understanding the attack stage helps categorize the incident and determine the appropriate response measures.",
      "questions": [
        {
          "id": "attack_stage",
          "type": "single_select",
          "question": "Which Stage of Attack best describes this incident?",
          "explanation": "Select the stage that most accurately represents where this incident falls in the attack lifecycle. This helps determine the appropriate MITRE ATT&CK techniques and response priorities.",
          "required": true,
          "options": [
            {
              "value": "survey",
              "label": "Survey - Reconnaissance and initial targeting (scanning, probing, information gathering)"
            },
            {
              "value": "delivery",
              "label": "Delivery - Initial compromise attempt detected (phishing, exploit attempt, malware delivery)"
            },
            {
              "value": "isolated_breach",
              "label": "Isolated Breach - Limited compromise of system(s), no evidence of lateral movement"
            },
            {
              "value": "extensive_breach",
              "label": "Extensive Breach - Compromise with lateral movement, persistence, or privilege escalation"
            },
            {
              "value": "affect",
              "label": "Affect - Impact phase with data exfiltration, destruction, or operational disruption"
            }
          ]
        }
      ]
    }
  ]
}
